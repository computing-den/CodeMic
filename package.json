{
  "name": "codemic",
  "displayName": "CodeMic",
  "version": "0.9.0",
  "description": "A new way to talk about code",
  "publisher": "ComputingDen",
  "license": "MIT",
  "repository": "github:computing-den/CodeMic",
  "scripts": {
    "compile": "tsc && node esbuild.mjs",
    "compile:metafile": "tsc && node esbuild.mjs --metafile",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.mjs --watch",
    "watch:tsc": "tsc --watch",
    "vscode:prepublish": "npm run bundle",
    "bundle": "tsc && node esbuild.mjs --production",
    "package": "vsce package",
    "ls": "vsce ls"
  },
  "files": [
    "doc",
    "dist",
    "resources",
    "config.json"
  ],
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codemic-view-container",
          "title": "CodeMic",
          "icon": "./resources/icon.svg"
        }
      ]
    },
    "views": {
      "codemic-view-container": [
        {
          "type": "webview",
          "id": "codemic-view",
          "name": "CodeMic"
        }
      ]
    },
    "commands": [
      {
        "command": "codemic.openView",
        "title": "CodeMic"
      },
      {
        "command": "codemic.openHome",
        "title": "Home",
        "icon": {
          "light": "./resources/light/home.svg",
          "dark": "./resources/dark/home.svg"
        }
      },
      {
        "command": "codemic.refreshHome",
        "title": "Refresh list",
        "icon": {
          "light": "./resources/light/refresh.svg",
          "dark": "./resources/dark/refresh.svg"
        }
      },
      {
        "command": "codemic.account",
        "title": "CodeMic account",
        "icon": {
          "light": "./resources/light/account.svg",
          "dark": "./resources/dark/account.svg"
        }
      },
      {
        "command": "codemic.reportIssue",
        "title": "CodeMic report issue",
        "icon": {
          "light": "./resources/light/question.svg",
          "dark": "./resources/dark/question.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "codemic.refreshHome",
          "when": "view == codemic-view && codemic.canRefreshHome",
          "group": "navigation@1"
        },
        {
          "command": "codemic.openHome",
          "when": "view == codemic-view && codemic.canOpenHome",
          "group": "navigation@2"
        },
        {
          "command": "codemic.reportIssue",
          "when": "view == codemic-view",
          "group": "navigation@3"
        },
        {
          "command": "codemic.account",
          "when": "view == codemic-view",
          "group": "navigation@4"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/axios": "^0.14.4",
    "@types/lodash": "^4.14.199",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.9",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/unzipper": "^0.10.9",
    "@types/uuid": "^9.0.4",
    "@types/vscode": "^1.82.0",
    "@types/vscode-webview": "^1.57.2",
    "@vscode/codicons": "^0.0.36",
    "@vscode/test-electron": "^2.3.4",
    "esbuild": "^0.19.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "archiver": "^6.0.1",
    "axios": "^1.7.7",
    "form-data": "^4.0.0",
    "ignore": "^5.3.2",
    "immer": "^10.0.2",
    "json-stringify-pretty-compact": "^4.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mp4box": "^0.5.3",
    "node-fetch": "^2.7.0",
    "path-browserify": "^1.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "unzipper": "^0.10.14",
    "uuid": "^9.0.1",
    "vscode-uri": "^3.0.8"
  }
}
