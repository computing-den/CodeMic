{
  "name": "@codemic/vscode-extension",
  "displayName": "CodeMic",
  "description": "",
  "version": "0.0.1",
  "scripts": {},
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codemic-view-container",
          "title": "CodeMic",
          "icon": "../vscode-webview/resources/icon.svg"
        }
      ]
    },
    "views": {
      "codemic-view-container": [
        {
          "type": "webview",
          "id": "codemic-view",
          "name": "CodeMic"
        }
      ]
    },
    "commands": [
      {
        "command": "codemic.openView",
        "title": "CodeMic"
      },
      {
        "command": "codemic.openWelcome",
        "title": "Home",
        "icon": {
          "light": "../vscode-webview/resources/light/home.svg",
          "dark": "../vscode-webview/resources/dark/home.svg"
        }
      },
      {
        "command": "codemic.account",
        "title": "CodeMic account",
        "icon": {
          "light": "../vscode-webview/resources/light/account.svg",
          "dark": "../vscode-webview/resources/dark/account.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "codemic.openWelcome",
          "when": "view == codemic-view && codemic.canOpenWelcome",
          "group": "navigation@1"
        },
        {
          "command": "codemic.account",
          "when": "view == codemic-view",
          "group": "navigation@2"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/lodash": "^4.14.199",
    "@types/node": "20.x",
    "@types/node-fetch": "^2.6.9",
    "@types/unzipper": "^0.10.9",
    "@types/vscode": "^1.82.0",
    "@vscode/test-electron": "^2.3.4"
  },
  "dependencies": {
    "@codemic/lib": "^1.0.0",
    "@types/archiver": "^6.0.2",
    "@types/uuid": "^9.0.4",
    "archiver": "^6.0.1",
    "form-data": "^4.0.0",
    "ignore": "^5.2.4",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "node-fetch": "^2.7.0",
    "unzipper": "^0.10.14",
    "uuid": "^9.0.1"
  }
}
