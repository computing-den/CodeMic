// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}"
        //"--load-extension=/home/sean/.config/google-chrome/Default/Extensions/fmkadmapgofadopljbjfkapdkoienihi/4.28.0_0"
      ],
      "preLaunchTask": "${defaultBuildTask}",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/**/*"]
      // "resolveSourceMapLocations": [
      //   "${workspaceRoot}/packages/**/out/*",
      //   "!**/node_modules/**"
      // ]
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "${workspaceFolder}/test/test_workspace",
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/dist/test-runner.js"
      ],
      "preLaunchTask": "${defaultBuildTask}",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/**/*"]
    }
  ]
}
