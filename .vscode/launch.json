// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-extension"
        //"--load-extension=/home/sean/.config/google-chrome/Default/Extensions/fmkadmapgofadopljbjfkapdkoienihi/4.28.0_0"
      ],
      "preLaunchTask": "${defaultBuildTask}",
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/packages/**/out/**/*", "!**/node_modules/**/*"]
      // "resolveSourceMapLocations": [
      //   "${workspaceRoot}/packages/**/out/*",
      //   "!**/node_modules/**"
      // ]
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-extension",
        "--extensionTestsPath=${workspaceFolder}/packages/vscode-extension/out/test/suite/index"
      ],
      "preLaunchTask": "${defaultBuildTask}",
      "sourceMaps": true
    }
  ]
}
